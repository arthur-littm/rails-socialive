<div class="col-xs-12 col-md-4 text-center">
  <h3 style= "display: inline; box-sizing: border-box; box-shadow: inset 0px -10px 0px 0px #b7ffd4;">Tickets sold</h3>
  <p>(only you can see this)</p>
  <div class="margin-bottom-20 margin-top-20">
    <div class="stats">
      <% if @livestream.tickets.count == 1 %>
        <a data-toggle="modal" data-target="#Tickets-list">
          <strong id="Tickets" class="stat" >
            <%#= @livestream.tickets.count %>
          </strong>1 Ticket
        </a>
      <% else %>
        <a data-toggle="modal" data-target="#Tickets-list">
          <strong id="Tickets" class="stat" >
            <%= @livestream.tickets.count %>
          </strong>Tickets
        </a>
      <% end %>
    </div>

    <div class="modal fade" id="Tickets-list" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Tickets</h4>
          </div>
          <div class="modal-body">

            <ul style= 'text-align:left'>
              <% @livestream.tickets.each do |ticket| %>
                <%= link_to profile_path(ticket.user) do %>
                  <li class="list-inline">
                  <% if ticket.user.profilepic != nil %>
                     <%= cl_image_tag ticket.user.profilepic.path, class:"avatar" %>
                  <% elsif ticket.user.facebook_picture_url != nil %>
                    <%= cl_image_tag(ticket.user.facebook_picture_url, class: "avatar") %>
                  <% else %>
                   <%= image_tag "default-avatar.png", class:"avatar" %>
                  <% end %>

                  <%= ticket.user.first_name %> <%= ticket.user.last_name %></li>
                <% end %>
              <% end %>
            </ul>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
