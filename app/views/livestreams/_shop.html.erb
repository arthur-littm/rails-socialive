<div class="home-wrapper">
  <div class="cards-square-container container">
  <h3>Featured products</h3>
    <div class="row">

    <% Product.where(livestream: @livestream).all.each do |product| %>

      <div class="col-xs-12 col-sm-4 col-md-3">
        <div class="card-square-shop" >
          <div class="card-square-image-shop" style="background-image: url('<%= cl_image_path product.product_pic.path %>');">
          </div>
        </div>
      </div>

    <% end %>

      <% if current_user = @livestream.user %>

      <div class="col-xs-12 col-sm-4 col-md-3">
        <div class="card-square-shop-add" >
        <p><%= link_to "Add product to the shop", new_livestream_product_path(@livestream) %></p>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
