            <%= form_for @message, url: '#' do |f| %>
              <div class="form-group">

                <%= f.text_area :body, class: 'form-control text-input-better-css' %>

              </div>

              <%= f.submit "Post", class: 'btn btn-primary btn-lg send-message-btn' %>
            <% end %>
          <!-- THIS IS THE CHAT ^^^ -->
          </div>
        </div>

    </div>
  </div>
</div>

