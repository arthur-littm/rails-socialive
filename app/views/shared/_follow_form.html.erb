<!-- If user is not current user, this will appear or else it's hidden -->
<% unless current_user == @user || current_user == nil %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'shared/unfollow' %>
  <% else %>
    <%= render 'shared/follow' %>
  <% end %>
  </div>
<% end %>

